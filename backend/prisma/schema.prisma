generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @unique @default(uuid())
  email String @unique
  password String?
  name String
  posts Posts[]
}

model Posts {
  id String @id @unique @default(uuid())
  authorId String
  content String
  isPublished Boolean @default(false)
  title String
  author User @relation(fields: [authorId], references: [id])
}